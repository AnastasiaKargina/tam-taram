    {title: 'Social', link: '#'},
    {title: 'News', link: '#'},
    {title: 'About', link: '#'},
    {title: 'Professional', link: '#'}
]; %>


<% const videos=[
    [   {title: '<span class="headline">STEP <span class="color-elem">BY</span> STEP</span>'},
        {id: 'z8M0Fa1JVco'},
        {id: 'Wi2KcdoCuo4'},
        {id: '8H6dYUgQKB8'},
        {id: 'PZjGrmHdFME'},
        {id: '_wLGr24VeoI'},
        {id: 'DG4FAU5qmMY'}
    ]
    ,
    [   {title: '<div class="headline">CRAFT  <span class="color-elem">EDUCATION</span> </div>'},
        {id: 'RmNWNLXmswk'},
        {id: '-tztXOz8Vc0'},
        {id: 'kUfIVtyydgQ'},
        {id: 'RmNWNLXmswk'}
    ],
    [   {title: '<span class="headline">INSPIRATION</span>'},
        {id: 'VmmwwzR536g'},
        {id: 'vz0k8O-Ef9Y'},
        {id: '6oPBFnsqJW8'},
        {id: 'VmmwwzR536g'}
    ]

]
%>
<% const icons = [
    {icon: 'facebook',link: '#'},
    {icon: 'twitter',link: '#'},
    {icon: 'pinterest',link: '#'},
    {icon: 'youtube',link: '#'},
    {icon: 'instagram',link: '#'}
]
%>

<header class="header">
    <div class="header__top">

        <div class="header__top location">
            <span class="location__elem">NEAREST SALON</span>
            <img class="icon-dropdown" src="img/ico_dropdown.svg" >
            <div class="location__title-salon">Plush Salon 91101</div>
        </div>


        <div class="header__top__menu nav-burger">
            <input class="nav-burger__checkbox" type="checkbox" id="burger">
            <label for="burger" class="nav-burger__label"></label>


            <ul class="nav-burger__menu">
                <% menuItems.forEach((item) => { %>
                    <li class="nav-burger__elem">
                        <a class="nav-burger__link" href="<%= item.link %>">
                            <%= item.title %>
                        </a>
                    </li>
                <% }) %>
            </ul>

        </div>


        <div class="header__top logo">
            <img src="img/logo.svg">
        </div>

        <div class="search">
            <img  class="search__size" src="img/ico_search.svg" >
        </div>

    </div>

    <div class="header__bottom">

        <div class="nav-menu">
            <% menuItems.forEach((item) => { %>
                <div class="nav-menu__wrapper-elem">
                    <a class="menu-link" href="<%= item.link; %>"><%= item.title %></a>
                </div>
            <% }) %>
        </div>

    </div>
</header>


<section class="section">
    <h1 class="headline-videos">VIDEOS</h1>

    <div class="video">
        <a data-fancybox href="https://youtu.be/gr8u2KXuGXA">
            <div class="video__wrapper"><img class="video_size" src="https://img.youtube.com/vi/gr8u2KXuGXA/hqdefault.jpg"></div>
        </a>
    </div>

    <div class="section__text-1">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        Pellentesque lobortis, nisl at ullamcorper egestas,
        felisadi piscing dolor, a interdum lorem urna quis magna.
    </div><!--  изменить название класса-->
    <% for(var i=0;i<videos.length;i++){%>
        <%-videos[i][0].title%>
        <div class="slider">
        <% for(var j=1;j<videos[i].length;j++){ %>

            <a data-fancybox href="https://youtu.be/<%= videos[i][j].id %>">
                <div class="video__wrapper">
                    <img  class="video_size" src="https://img.youtube.com/vi/<%= videos[i][j].id %>/hqdefault.jpg">
                </div>
            </a>

    <%}%>
        </div>
    <% } %>
    <button class="loadMore" onclick="loading()">LOAD MORE</button>

</section>
<footer class="footer">
    <ul class="icon-social">
        <% icons.forEach((item) => { %>
            <li class="icon-social__indent">
                <a href="<%=item.link%>"><!-- добавить в массив ссылки-->
                    <%- include("img/ico_" + item.icon + ".svg") %>
                </a>
            </li>
        <% }) %>
    </ul>
    <div class="settings">
        <div id="location">LOCATION: UNITED STATES</div>
        <div id="language">LANGUAGE: ENGLISH</div>
    </div>
    <div class="wappers-elem">
        <div id="text3">PRIVACY POLICY TERMS OF USE CONTACT US</div>
        <div id="text4">CONTACT US NEWSLETTER SITEMAP</div>
    </div>

</footer>


<script src="//code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/3.0.47/jquery.fancybox.min.js"></script>
<script src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
<script src="js/scripts.js"></script>
</body>
</html>
